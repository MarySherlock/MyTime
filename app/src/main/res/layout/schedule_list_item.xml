<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <CheckBox
        android:id="@+id/select_schedule_list_item"
        android:layout_width="32dp"
        android:layout_height="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/schedule_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/select_schedule_list_item"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/manage_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_finish"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/update_item"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/update_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_update_label"
        app:layout_constraintEnd_toStartOf="@+id/delete_item"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/delete_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>